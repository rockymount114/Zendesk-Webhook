# Zendesk Configuration
# Replace with your actual Zendesk domain (without https://)
ZENDESK_BASE_URL=https://your-domain.zendesk.com

# Your Zendesk API token (generate from Admin → Channels → API)
ZENDESK_API_KEY=your_api_token_here

# Your Zendesk user email address
ZENDESK_USER=your.email@domain.com

# Optional: Database Configuration (for future use)
DB_SERVER=your_db_server
DB_DATABASE=zendesk
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Optional: Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True